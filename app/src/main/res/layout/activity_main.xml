<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFFFFF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_iniciosesion"
        android:layout_width="328dp"
        android:layout_height="45dp"
        android:layout_marginTop="331dp"
        android:backgroundTint="#6ABDA6"


        android:fontFamily="@font/poppins"


        android:gravity="center_horizontal|center_vertical"

        android:letterSpacing="0.08"

        android:lineSpacingExtra="9.8sp"
        android:onClick="iniciarsesion"
        android:textAllCaps="false"
        android:textColor="#fcfcfc"
        android:textSize="14sp"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Inicio Sesión" />

    <Button
        android:id="@+id/bt_registro"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_marginTop="392dp"
        android:backgroundTint="#FF5D57"
        android:fontFamily="@font/poppins"
        android:letterSpacing="0.08"
        android:text="@string/registrate"
        android:textAllCaps="false"
        android:textColor="#fcfcfc"
        android:textSize="14sp"
        app:cornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t_inicio_sesion"

        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:backgroundTint="#6ABDA6"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="9.8sp"
        android:text="@string/t_inicio_sesion"
        android:textAlignment="center"
        android:textColor="#273431"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="33.8sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="328dp"
        android:layout_height="53dp"
        android:layout_marginTop="159dp"
        android:layout_marginBottom="8dp"
        android:background="#f2f3f2"
        android:backgroundTint="#f2f3f2"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/t_email"
            android:layout_width="226dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="52dp"


            android:layout_marginBottom="1dp"
            android:fontFamily="@font/poppins"
            android:inputType="textEmailAddress"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="8sp"
            android:textColor="#99273431"
            android:textColorHint="#F2F3F2"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="Correo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="328dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="#F2F3F2"
        android:backgroundTint="#F2F3F2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

        <EditText
            android:id="@+id/t_pass"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="-1dp"
            android:fontFamily="@font/poppins"
            android:letterSpacing="0.01"


            android:lineSpacingExtra="8sp"
            android:textColor="#99273431"
            android:textColorHint="#F2F3F2"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="Contraseña" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
