<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/t_registro"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/poppins"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="9.8sp"
        android:text="Registro"
        android:textColor="#273431"


        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Registro" />


    <CheckBox
        android:id="@+id/check_1"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="430dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <CheckBox
        android:id="@+id/check_2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="465dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/bt_registrateaqui"
        android:layout_width="338dp"
        android:layout_height="45dp"
        android:layout_marginTop="549dp"
        android:backgroundTint="#6ABDA6"
        android:onClick="registrar"
        android:text="@string/reg_aqui"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_iniciarsesion2"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_marginTop="617dp"
        android:backgroundTint="#FF5D57"
        android:text="@string/inicio_sesion"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/laya1"
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:layout_marginTop="222dp"
        android:background="#f2f3f2"
        android:backgroundTint="#F2F3F2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/t_num2"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/poppins"
            android:letterSpacing="0.15"
            android:lineSpacingExtra="8sp"
            android:textColor="#99273431"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="Número" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/laya2"
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:layout_marginTop="350dp"
        android:background="#F2F3F2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/t_pass2"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins"
            android:letterSpacing="0.15"
            android:lineSpacingExtra="8sp"
            android:textColor="#99273431"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="Contraseña" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/laya3"
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:layout_marginTop="284dp"
        android:background="#F2F3F2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/t_email2"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="52dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins"
            android:letterSpacing="0.15"
            android:lineSpacingExtra="8sp"
            android:textColor="#99273431"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="Correo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/laya4"
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:layout_marginTop="158dp"
        android:background="#f2f3f2"
        android:backgroundTint="#F2F3F2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/t_nombre2"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="52dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins"
            android:lineSpacingExtra="8sp"
            android:textColor="#99273431"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:letterSpacing="0.15"
            tools:text="Nombre" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="430dp"
        android:fontFamily="@font/poppins"
        android:text="@string/check1"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/check_1"
        app:layout_constraintTop_toTopOf="parent"
        tools:letterSpacing="0.15" />

    <TextView
        android:id="@+id/t_check2"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/poppins"
        android:letterSpacing="0.15"
        android:text="@string/check2"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_registrateaqui"
        app:layout_constraintStart_toEndOf="@+id/check_2"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>